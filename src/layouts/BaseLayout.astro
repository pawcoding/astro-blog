---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title} | pawcode Development</title>
    <base href="/" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/brand/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/brand/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/brand/favicon-16x16.png"
    />
    <link rel="manifest" href="/brand/site.webmanifest" />
    <link rel="mask-icon" href="/brand/safari-pinned-tab.svg" color="#4472c4" />
    <link rel="shortcut icon" href="/brand/favicon.ico" />
    <link rel="icon" type="image/x-icon" href="/brand/favicon.ico" />
    <meta name="msapplication-TileColor" content="#262626" />
    <meta name="msapplication-config" content="/brand/browserconfig.xml" />
    <meta name="theme-color" content="#262626" />

    <!-- Open Graph -->
    <meta property="og:url" content="https://blog.pawcode.de" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="pawcode Development Blog" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="pawcode Development Blog" />

    <!-- Twitter -->
    <meta property="twitter:domain" content="blog.pawcode.de" />
    <meta property="twitter:site" content="@pawcode" />
    <meta property="twitter:creator" content="@pawcode" />
  </head>

  <body class="scroll-smooth">
    <div class="flex min-h-screen flex-col justify-between">
      <Header />

      <main>
        <slot />
      </main>

      <Footer />
      <div></div>
    </div>
  </body>
</html>
