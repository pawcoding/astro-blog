---
import BaseLayout from "../layouts/BaseLayout.astro";
const posts = await Astro.glob("../pages/posts/*.md");
---

<BaseLayout title="Blog">
  <h1>Blog</h1>

  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
